@{
	ViewData["Title"] = "Home Page";
}

<div class="container text-sm-start">
	<div>
		<h1>Text Parser</h1>
	</div>

	<div class="col-inline">
		<div class="label">Text to parse:</div>
		<div >
			<input type="text" id="inputText" />
		</div>

	</div>
	<div class="col-block">
		<div >
			<button id="btSenden" onclick="sendClick()">Senden</button>
		</div>
		<div></div>
	</div>
	<div class="col-inline">
		<div class="label">Parsed text:</div>
		<div>
			<pre class="output-text" id="outputHtml"></pre>
		</div>

	</div>
</div>
<script>
	function sendClick() {
		let inputText = $('#inputText').val();
		$.post("/Home/Markdown", { 'Text': inputText }, function (data) {
			data = data.replaceAll('<', '&lt;');
			data = data.replaceAll('>', '&gt;');
			$("#outputHtml").html(data);
		});
	}

</script>